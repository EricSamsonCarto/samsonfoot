---
import ContentLayout from '../../layouts/ContentLayout.astro';
---

<ContentLayout title="Contact Us">
  <div class="max-w-4xl mx-auto px-4 sm:px-6">

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      <div>

        <!-- office -->
        <div class="space-y-0 sm:space-y-6">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-blue-600 flex-shrink-0 p-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <div>
              <p class="text-gray-700 mt-8">
                <b>Office Address</b> 
                <br>
                20 Main St<br>
                Oakland, ME 04963
              </p>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-blue-600 flex-shrink-0 p-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <div>
              <p class="text-gray-700">
                <b>Phone</b> 
                <br>
                207-458-1809
              </p>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-blue-600 flex-shrink-0 p-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <div class="text-gray-700">
                
                <p>
                  <b>Office Hours</b> 
                  <br>
                  Monday - Thursday : 9:00 AM - 5:00 PM
                </p>
              </div>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-blue-600 flex-shrink-0 p-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <div>
              <div class="text-gray-700">

                <p>
                  <b>Book Appointment</b> 
                  <br>
                  <a href="https://www.tebra.com/care/provider/richard-samson-dpm-1447251913"
                  target="_blank"
                  class="text-blue-600 hover:text-blue-400 transition-colors duration-300 no-underline">
                    Book Your Appointment
                  </a>
                </p>
              </div>
            </div>
          </div>

        </div>

        <!-- emergencies -->
        <div class="mt-2 sm:mt-8 p-4 bg-white rounded-lg shadow-sm">
          <div class="flex items-center space-x-3">
            <span class="text-3xl flex-shrink-0 p-2">⚠️</span>
            <div>
              <p class="text-sm text-gray-700">
                <b>Medical Emergency</b> 
                <br>
                For medical emergencies, please call 911 or go to your nearest emergency room.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- contact form -->
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h2>

        <!-- netlify info -->
        <form
          name="contact"
          method="POST"
          data-netlify="true"
          data-netlify-honeypot="bot-field"
          class="space-y-6"
        >
          <div class="hidden">
            <label>Don't fill this out if you're human: <input name="bot-field" /></label>
            <input type="hidden" name="form-name" value="contact" />
          </div>

          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
              Full Name *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 focus:border-blue-600 focus:ring-1 focus:ring-blue-600 outline-none transition-colors duration-200"
              placeholder="Your full name"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email Address *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 focus:border-blue-600 focus:ring-1 focus:ring-blue-600 outline-none transition-colors duration-200"
              placeholder="your.email@example.com"
            />
          </div>

          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
              Phone Number
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-gray-300 focus:border-blue-600 focus:ring-1 focus:ring-blue-600 outline-none transition-colors duration-200"
              placeholder="(555) 123-4567"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
              Subject *
            </label>
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 border border-gray-300 focus:border-blue-600 focus:ring-1 focus:ring-blue-600 outline-none transition-colors duration-200"
            >
              <option value="">Select a topic</option>
              <option value="new-patient">New Patient Inquiry</option>
              <option value="appointment">Schedule Appointment</option>
              <option value="direct-pay">Direct Pay Questions</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="5"
              class="w-full px-4 py-3 border border-gray-300 focus:border-blue-600 focus:ring-1 focus:ring-blue-600 outline-none transition-colors duration-200 resize-vertical"
              placeholder="Please describe how we can help you..."
            ></textarea>
          </div>

          <div>
            <button
              type="submit"
              class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 transition-colors duration-200"
            >
              Send Message
            </button>
          </div>

          <p class="text-sm text-gray-600">
            * Required fields.
          </p>
        </form>
      </div>
    </div>
  </div>
</ContentLayout>

<style>
  input::placeholder,
  textarea::placeholder {
    color: #9CA3AF;
    opacity: 1;
    font-style: italic;
  }

  input:focus,
  textarea:focus,
  select:focus {
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(37, 99, 235, 0.1);
  }

  select {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 0.75rem center;
    background-repeat: no-repeat;
    background-size: 1.5em 1.5em;
    padding-right: 2.5rem;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }

  @media (max-width: 640px) {
    .max-w-4xl {
      max-width: 100%;
    }

    .grid {
      gap: 1.5rem;
    }

    input, textarea, select {
      min-width: 0;
      width: 100%;
      box-sizing: border-box !important;
    }
  }
</style>