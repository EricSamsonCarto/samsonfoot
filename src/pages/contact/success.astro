---
import ContentLayout from '../../layouts/ContentLayout.astro';
---

<ContentLayout title="Message Sent">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 text-center">
    <div class="bg-white rounded-lg shadow-sm p-8 sm:p-12">
      <div class="text-green-600 text-5xl mb-6">&#10003;</div>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Thank You!</h2>
      <p class="text-gray-700 mb-6">
        Your message has been sent successfully. We will get back to you as soon as possible.
      </p>
      <a
        href="/contact"
        class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 transition-colors duration-200 no-underline"
      >
        Back to Contact
      </a>
    </div>
  </div>
</ContentLayout>
